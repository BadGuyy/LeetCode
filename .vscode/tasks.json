{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "D:\\Develop\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                // "main.cpp",
                "-std=c++17",
                "-o",
                "${workspaceFolder}${/}bin${/}${relativeFileDirname}${/}${fileBasenameNoExtension}.exe",
                // "-fno-stack-protector",//关闭栈溢出保护
                "-fexec-charset=GBK"//设置字符集为GBK好在中文windows的CMD里显示中文
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}